<Window x:Class="BreakJunctions.Keithley4200_Channel_Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keithley4200_Channel_Settings" Height="420" Width="360">

    <Window.Resources>
        <Style TargetType="wpfTool:IntegerUpDown">
            <Setter Property="Margin" Value="1 2.5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style TargetType="wpfTool:DoubleUpDown">
            <Setter Property="CultureInfo" Value="en-US" />
            <Setter Property="FormatString" Value="F3" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Increment" Value="0.01" />
            <Setter Property="Margin" Value="1 2.5" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0 2.0" />
        </Style>
    </Window.Resources>

    <Grid x:Name="LayoutRoot" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="165"></ColumnDefinition>
            <ColumnDefinition MaxWidth="500"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid x:Name="ConnectionSettings" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0">Board Number</Label>
            <wpfTool:IntegerUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Path=BoardNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <Label Grid.Row="1" Grid.Column="0" Content="Primary Address">
                <Label.ToolTip>
                    <ToolTip>
                        <TextBlock MaxWidth="250">Range is 0 - 30. By default it is 26.</TextBlock>
                    </ToolTip>
                </Label.ToolTip>
            </Label>
            <wpfTool:IntegerUpDown Grid.Row="1" Grid.Column="1" Value="{Binding Path=PrimaryAddress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <Label Grid.Row="2" Grid.Column="0">Secondary Address</Label>
            <wpfTool:IntegerUpDown Grid.Row="2" Grid.Column="1" Value="{Binding Path=SecondaryAddress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <Label Grid.Row="3" Grid.Column="0" Content="Measurement Speed">
                <Label.ToolTip>
                    <ToolTip>
                        <TextBlock MaxWidth="250" TextWrapping="Wrap">Defines the speed of measurement</TextBlock>
                    </ToolTip>
                </Label.ToolTip>
            </Label>
            <ComboBox Grid.Row="3" Grid.Column="1" Text="{Binding Path=TheIntegrationTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem>Short</ComboBoxItem>
                <ComboBoxItem IsSelected="True">Medium</ComboBoxItem>
                <ComboBoxItem>Long</ComboBoxItem>
            </ComboBox>
        </Grid>
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Source Mode" HorizontalAlignment="Stretch" Margin="5 5 5 2.5">
            <StackPanel>
                <RadioButton x:Name="radioSourceMeasureModeVoltage" IsChecked="{Binding IV_VoltageModeIsChecked, Mode=TwoWay}">Voltage</RadioButton>
                <RadioButton x:Name="radioSourceMeasureModeCurrent" IsChecked="{Binding IV_CurrentModeIsChecked, Mode=TwoWay}">Current</RadioButton>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
            <Label>Working Channel</Label>
            <ComboBox x:Name="comboBoxWorkingChannel" Text="{Binding Path=SelectedChannelString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ComboBoxItem IsSelected="True">SMU 1</ComboBoxItem>
                <ComboBoxItem>SMU 2</ComboBoxItem>
                <ComboBoxItem>SMU 3</ComboBoxItem>
                <ComboBoxItem>SMU 4</ComboBoxItem>
                <ComboBoxItem>SMU 5</ComboBoxItem>
                <ComboBoxItem>SMU 6</ComboBoxItem>
                <ComboBoxItem>SMU 7</ComboBoxItem>
                <ComboBoxItem>SMU 8</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Grid Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition MaxWidth="75"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Current Limit</Label>
            <wpfTool:DoubleUpDown Grid.Row="1" Grid.Column="0" Value="{Binding Path=LimitValueCurrent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <ComboBox x:Name="comboBoxCurrentLimitMultiplier" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Text="{Binding Path=LimitValueCurrentMultiplier, UpdateSourceTrigger=propertyChanged, Mode=TwoWay}">
                <ComboBoxItem>Pico</ComboBoxItem>
                <ComboBoxItem>Nano</ComboBoxItem>
                <ComboBoxItem>Micro</ComboBoxItem>
                <ComboBoxItem>Mili</ComboBoxItem>
                <ComboBoxItem>Senti</ComboBoxItem>
                <ComboBoxItem>Deci</ComboBoxItem>
                <ComboBoxItem IsSelected="True">None</ComboBoxItem>
            </ComboBox>
            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">Voltage Limit</Label>
            <wpfTool:DoubleUpDown Grid.Row="3" Grid.Column="0" Value="{Binding Path=LimitValueVoltage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <ComboBox x:Name="comboBoxVoltageLimitMultiplier" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Text="{Binding Path=LimitValueVoltageMultiplier, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ComboBoxItem>Pico</ComboBoxItem>
                <ComboBoxItem>Nano</ComboBoxItem>
                <ComboBoxItem>Micro</ComboBoxItem>
                <ComboBoxItem>Mili</ComboBoxItem>
                <ComboBoxItem>Senti</ComboBoxItem>
                <ComboBoxItem>Deci</ComboBoxItem>
                <ComboBoxItem IsSelected="True">None</ComboBoxItem>
            </ComboBox>
        </Grid>
        <Button x:Name="cmdSaveSettings" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5 2.5 5 5 " IsDefault="True" Click="on_cmdSaveSettingsClick">Save Settings</Button>
    </Grid>
</Window>
